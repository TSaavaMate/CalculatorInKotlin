<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/workingsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/resultsTv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toSRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/resultsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        style="@style/Buttonrow">
        <TextView
            style="@style/divideandclearButton"
            android:text="@string/clear"
            android:onClick="cleaAction">
        </TextView>
        <TextView
            style="@style/divideandclearButton"
            android:text="@string/divide"
            android:onClick="divideAction">
        </TextView>


    </LinearLayout>
    <LinearLayout
        style="@style/Buttonrow">
        <TextView
            android:id="@+id/Button7"
            style="@style/Buttonnumber"
            android:text="@string/_7">

        </TextView>
        <TextView
            android:id="@+id/Button8"
            style="@style/Buttonnumber"
            android:text="@string/_8">
        </TextView>
        <TextView
            android:id="@+id/Button9"
            style="@style/Buttonnumber"
            android:text="@string/_9">

        </TextView>
        <TextView
            style="@style/operatorButton"
            android:text="@string/multiply"
            android:onClick="multiplyAction">


        </TextView>

    </LinearLayout>
    <LinearLayout
        style="@style/Buttonrow">
        <TextView
            android:id="@+id/Button4"
            style="@style/Buttonnumber"
            android:text="@string/_4">

        </TextView>
        <TextView
            android:id="@+id/Button5"
            style="@style/Buttonnumber"
            android:text="@string/_5">

        </TextView>
        <TextView
            android:id="@+id/Button6"
            style="@style/Buttonnumber"
            android:text="@string/_6">

        </TextView>
        <TextView
            style="@style/operatorButton"
            android:text="@string/minus"
            android:onClick="minusAction">



        </TextView>

    </LinearLayout>
    <LinearLayout
        style="@style/Buttonrow">
        <TextView
            android:id="@+id/Button1"
            style="@style/Buttonnumber"
            android:text="@string/_1">

        </TextView>
        <TextView
            android:id="@+id/Button2"
            style="@style/Buttonnumber"
            android:text="@string/_2">

        </TextView>
        <TextView
            android:id="@+id/Button3"
            style="@style/Buttonnumber"
            android:text="@string/_3">

        </TextView>
        <TextView
            style="@style/operatorButton"
            android:text="@string/plus"
            android:backgroundTint="@color/second_grey"
            android:onClick="plusaction">

        </TextView>

    </LinearLayout>
    <LinearLayout
        style="@style/Buttonrow">
        <TextView
            style="@style/Buttonnumber"
            android:text="@string/dot">

        </TextView>
        <TextView
            style="@style/Buttonnumber"
            android:text="@string/_0">

        </TextView>
        <TextView
            style="@style/Buttonnumber"
            android:text="@string/del"
            android:onClick="delAction">

        </TextView>
        <TextView
            style="@style/EqualButton"
            android:text="@string/equal"
            android:onClick="equalaction"
            >

        </TextView>

    </LinearLayout>






</LinearLayout>